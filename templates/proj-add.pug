extends layout 

block layout-content 
  h1.page-title Add new project
  //- /admin/menu/add/submit will be the location where the form data is submitted to
  form(method="post", action="/admin/project/add/submit")
    div 
        label(for="name") Website Name: 
        input(type="text", id="name", name="website_name" required)
    div 
        label(for="user") User Name: 
        input(type="text", id="user", name="Github_username" placeholder="your github username" required)
    div 
        label(for="href") URI: 
        input(type="text", id="href", name="URL", placeholder="e.g. /my-project-page-uri" required)
    div 
        label(for="repo") Repo: 
        input(type="text", id="repo", name="GitHub_repo", placeholder="e.g. https://github.com/useless-web" required)
    div 
        label(for="imageName") Your Image: 
        input(type="text", id="imageName", name="screen",placeholder="e.g. image,png" required)
    button(type="submit") Add the Project